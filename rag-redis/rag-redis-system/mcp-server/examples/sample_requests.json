[
  {
    "description": "Initialize the MCP server",
    "request": {
      "jsonrpc": "2.0",
      "id": 1,
      "method": "initialize",
      "params": {
        "protocolVersion": "2024-11-05",
        "capabilities": {
          "roots": {},
          "sampling": {}
        },
        "clientInfo": {
          "name": "example-client",
          "version": "1.0.0"
        }
      }
    }
  },
  {
    "description": "List available tools",
    "request": {
      "jsonrpc": "2.0",
      "id": 2,
      "method": "tools/list",
      "params": {}
    }
  },
  {
    "description": "Ingest a document",
    "request": {
      "jsonrpc": "2.0",
      "id": 3,
      "method": "tools/call",
      "params": {
        "name": "ingest_document",
        "arguments": {
          "content": "This is a sample document about artificial intelligence. AI is transforming many industries including healthcare, finance, and technology. Machine learning algorithms can process vast amounts of data to identify patterns and make predictions.",
          "metadata": {
            "title": "Introduction to AI",
            "author": "AI Researcher",
            "category": "technology",
            "tags": ["AI", "machine learning", "technology"]
          }
        }
      }
    }
  },
  {
    "description": "Search documents",
    "request": {
      "jsonrpc": "2.0",
      "id": 4,
      "method": "tools/call",
      "params": {
        "name": "search_documents",
        "arguments": {
          "query": "artificial intelligence healthcare",
          "limit": 5
        }
      }
    }
  },
  {
    "description": "Research query combining local and web search",
    "request": {
      "jsonrpc": "2.0",
      "id": 5,
      "method": "tools/call",
      "params": {
        "name": "research_query",
        "arguments": {
          "query": "machine learning applications in finance",
          "sources": ["arxiv.org", "google.com"]
        }
      }
    }
  },
  {
    "description": "List stored documents",
    "request": {
      "jsonrpc": "2.0",
      "id": 6,
      "method": "tools/call",
      "params": {
        "name": "list_documents",
        "arguments": {
          "limit": 10,
          "offset": 0
        }
      }
    }
  },
  {
    "description": "Get system health check",
