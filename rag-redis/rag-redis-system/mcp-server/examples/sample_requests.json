    "request": {
      "jsonrpc": "2.0",
      "id": 8,
      "method": "tools/call",
      "params": {
        "name": "get_memory_stats",
        "arguments": {}
      }
    }
  },
  {
    "description": "Get system metrics",
    "request": {
      "jsonrpc": "2.0",
      "id": 9,
      "method": "tools/call",
      "params": {
        "name": "get_system_metrics",
        "arguments": {}
      }
