  },
  {
    "description": "List resources",
    "request": {
      "jsonrpc": "2.0",
      "id": 10,
      "method": "resources/list",
      "params": {}
    }
  },
  {
    "description": "Read system configuration resource",
    "request": {
      "jsonrpc": "2.0",
      "id": 11,
      "method": "resources/read",
      "params": {
        "uri": "rag-redis://system/config"
      }
    }
  }
